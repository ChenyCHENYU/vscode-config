{
  "Media Query": {
    "prefix": "mq",
    "body": ["@media (${1:max}-width: ${2:768}px) {", "\t$0", "}"],
    "description": "媒体查询"
  },
  "Flexbox Container": {
    "prefix": "flex",
    "body": [
      "display: flex;",
      "flex-direction: ${1:row};",
      "justify-content: ${2:center};",
      "align-items: ${3:center};$0"
    ],
    "description": "Flexbox容器"
  },
  "Grid Container": {
    "prefix": "grid",
    "body": [
      "display: grid;",
      "grid-template-columns: ${1:repeat(3, 1fr)};",
      "grid-gap: ${2:10px};$0"
    ],
    "description": "Grid容器"
  },
  "Box Shadow": {
    "prefix": "bxsh",
    "body": ["box-shadow: ${1:0} ${2:2px} ${3:5px} ${4:rgba(0,0,0,0.1)};$0"],
    "description": "盒子阴影"
  },
  "Transition": {
    "prefix": "tran",
    "body": ["transition: ${1:all} ${2:0.3s} ${3:ease};$0"],
    "description": "过渡效果"
  },
  "Animation": {
    "prefix": "anim",
    "body": [
      "@keyframes ${1:animationName} {",
      "\t0% {",
      "\t\t$2",
      "\t}",
      "\t100% {",
      "\t\t$3",
      "\t}",
      "}",
      "",
      ".${4:element} {",
      "\tanimation: $1 ${5:1s} ${6:ease} ${7:infinite};$0",
      "}"
    ],
    "description": "CSS动画"
  }
}

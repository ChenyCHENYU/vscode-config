{
  "workbench.iconTheme": "material-icon-theme",
  "files.autoSave": "afterDelay",
  "editor.fontFamily": "Maple Mono NF CN, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": "'calt', 'ss04', 'ss01', 'ss02'",
  "editor.tabSize": 2,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.mouseWheelZoom": true,
  "editor.formatOnSave": true,
  // ! prettier config - 优化版本
  "editor.formatOnSaveTimeout": 2000,
  "editor.formatOnSaveMode": "modificationsIfAvailable", // 只格式化当前文件，提升性能
  "prettier.requireConfig": false, // 不强制要求配置文件，避免全项目扫描
  "prettier.useEditorConfig": false, // 不使用.editorconfig，减少文件查找
  // 删除了所有 prettier.xxx 规则配置，改为使用 .prettierrc 文件

  "typescript.preferences.quoteStyle": "single",
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true, // 新增：排除构建目录
    "**/.git": true, // 新增：排除git目录
    "**/coverage": true // 新增：排除测试覆盖率目录
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // ! koroFileHeader config
  // 头部注释
  "fileheader.customMade": {
    // 自动提取当前git config中的: 用户名、邮箱
    "Author": "git config user.name && git config user.email", // 同时获取用户名与邮箱
    "Date": "Do not edit", // 文件创建时间(不变)
    "LastEditors": "git config user.name && git config user.email", // 文件最后编辑者 与Author字段一致
    "LastEditTime": "Do not edit", // 文件最后编辑时间
    "FilePath": "Do not edit", // 文件在项目中的相对路径 自动更新
    "Description": "", // 介绍文件的作用、文件的入参、出参。
    "custom_string_obkoro1_copyright": "Copyright (c) ${now_year} by CHENY, All Rights Reserved 😎. "
  },
  // 函数注释
  "fileheader.cursorMode": {
    "description": "",
    "param": "",
    "return": ""
  },

  "fileheader.configObj": {
    "pathFormat": "${projectRoot}/...", // 改为相对路径格式
    // 自动添加头部注释黑名单
    "prohibitAutoAdd": ["json", "md"], // 禁止.json .md文件，自动添加头部注释
    // 自动添加头部注释黑名单
    "prohibitItemAutoAdd": ["test_koro", "test_koro2"], // 禁止test_kro/test_koro2项目自动添加头部注释
    // 某些文件夹或文件禁止添加自动注释
    "folderBlacklist": ["node_modules", "bun.lock"]
  },
  "terminal.integrated.profiles.windows": {
    "cmder": {
      "path": "D:/devlopment/Git/bin/bash.exe",
      "args": [],
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "git.autofetch": true,
  "[vue]": {
  
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.wordWrap": "on",
  "gitlens.views.searchAndCompare.files.layout": "list",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "liveServer.settings.donotShowInfoMsg": true,
  // ! TODO TREE CONFIG
  //todo-tree 标签配置  标签兼容大小写字母(很好的功能!!!)
  "todo-tree.regex.regex": "((%|#|//|<!--|^\\s*\\*)\\s*($TAGS)|^\\s*- \\[ \\])",
  // 添加自定义的标签成员,将在下面实现它们的样式
  "todo-tree.general.tags": ["TODO", "TAG", "BUG", "HACK", "FIXME", "MARK"],
  "todo-tree.regex.regexCaseSensitive": true,
  "todo-tree.highlights.defaultHighlight": {
    //如果相应变量没赋值就会使用这里的默认值
    "foreground": "#030303dd", //字体颜色
    "background": "#fff713", //背景色
    "icon": "check", //标签样式 check 是一个对号的样式
    "rulerColour": "#fff713", //边框颜色
    "type": "tag", //填充色类型  可在TODO TREE 细节页面找到允许的值
    "iconColour": "#fff713" //标签颜色
  },

  "todo-tree.highlights.customHighlight": {
    // 待完成
    "TODO": {
      "icon": "alert", //标签样式
      "background": "#FF8C00", //背景色
